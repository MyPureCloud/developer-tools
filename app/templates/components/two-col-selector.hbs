<form class="form form-flex form-col-selector">
    <div class="form-group form-group-stacked">
        <div class="control-label no-flex">
            <label >Available {{title}}</label>
        </div>
        <select class="form-control" multiple="true" onchange={{action "selectAvailable"}}>
          {{#each availableItems as |Item|}}
            <option value={{Item}} >{{Item}}</option>
          {{/each}}
        </select>
    </div>

    <div class="form-group form-group-stacked col-btn">
        <button class='btn btn-default btn-sm' {{action 'selectItems'}}><i class="fa fa-chevron-right" aria-hidden="true"></i></button>
        <button class='btn btn-default btn-sm' {{action 'removeSelectedItems'}}><i class="fa fa-chevron-left" aria-hidden="true"></i></button>
    </div>

    <div class="form-group form-group-stacked">
        <div class="control-label no-flex">
            <label>Selected Items</label>
        </div>
        <select class="form-control" multiple="true" onchange={{action "selectSelected"}}>
          {{#each selectedItems as |Item|}}
            <option value={{Item}} >{{Item}}</option>
          {{/each}}
        </select>
    </div>
</form>
