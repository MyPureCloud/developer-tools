<div class='account-selector'>
	{{#each accountManager.initialized as |account|}}
		<div>{{account-card account=account}}</div>
	{{/each}}

	<div>
		<div class='account-button add-account' title='Add Account'>
			<div class='fa fa-user-plus add-icon' {{action 'toggleRegionSelection'}}></div>
			<span class='add-text' {{action 'toggleRegionSelection'}}>Add Account</span>
			<div class='login-prompt'><input type='checkbox' id='loginprompt' {{action 'checkLoginPrompt' prompt on='input'}} /><label
					for='loginprompt'
					title='Forcefully prompts for login credentials'
				>Prompt for login?</label></div>
		</div>
	</div>

	{{#if showRegions}}
		<div class='account-button region-selection'>
			<span class='title'>Select a region</span>
			<div class='region-list'>
				<span class='region' {{action 'addAccount' 'mypurecloud.com'}}>USE</span>
				<span class='region' {{action 'addAccount' 'usw2.pure.cloud'}}>USW2</span>
				<span class='region' {{action 'addAccount' 'cac1.pure.cloud'}}>CAC1</span>
				<span class='region' {{action 'addAccount' 'mypurecloud.de'}}>EUC</span>
				<span class='region' {{action 'addAccount' 'mypurecloud.ie'}}>EUWI</span>
				<span class='region' {{action 'addAccount' 'euw2.pure.cloud'}}>EUW2</span>
				<span class='region' {{action 'addAccount' 'mypurecloud.com.au'}}>APACS</span>
				<span class='region' {{action 'addAccount' 'apne2.pure.cloud'}}>APNE2</span>
				<span class='region' {{action 'addAccount' 'mypurecloud.jp'}}>APACN</span>
				<span class='region' {{action 'addAccount' 'aps1.pure.cloud'}}>APS1</span>
				<span class='region' {{action 'addAccount' 'use2.us-gov-pure.cloud'}}>FdRAMP</span>
				{{#if showDevEnv}}
					<span class='region' {{action 'addAccount' 'inindca.com'}}>DCA</span>
					<span class='region' {{action 'addAccount' 'inintca.com'}}>TCA</span>
				{{/if}}
			</div>
			<span class='cancel-button' {{action 'toggleRegionSelection'}}>
				Cancel
			</span>
		</div>
	{{/if}}
</div>